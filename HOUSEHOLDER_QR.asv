% Metoda Householderovih reflektora

n = 3;
A = [10, 9, 18
    20, -15, -15
    20, -12, 51]
%A = rand(n,n);
[Q,R] = qr(A)
I = eye(n);

Q_h = eye(n);
R_h = A;
for i = 1:n
    u = A(:,i);
    a_i = u(i);
    sgn = sign(a_i);
    ss = 0;
    for j = i:n
        ss = ss + u(j);
    end
    u(1:i-1) = 0;
    u(i) = a_i + sgn * ss;
    u = 1/(2 * ss * (ss + norm(a_i))) * u;
    H = I - 2 * u * transpose(u);
    R_h = H * R_h
end